@model IEnumerable<Employee_MVC_v2._0.Models.Employee>
@inject IHttpContextAccessor hca

@{
    ViewData["Title"] = "Index";
    //Accessing the HttpContext Session in View, to use this, we need to write few lines in Program.cs and 
    //Inject the dependency using the @inject in the View Layer
    string s = hca.HttpContext.Session.GetString("loggedUser");
}

<h1>Index @ViewBag.name</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmpNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Basic)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeptNo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
   
        @foreach (var item in Model) {
        <tr>
            <td>
                 @item.EmpNo
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Basic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DeptNo)
            </td>
            <td>
                   <!-- <a href="Employees/Edit/ atTheRate item.EmpNo">Edit</a> | -->
                    @Html.ActionLink("Edit", "Edit", new { id = item.EmpNo }) |
                    @Html.ActionLink("Details", "Details", new { id=item.EmpNo }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.EmpNo })
            </td>
        </tr>
        }
    </tbody>
</table>
